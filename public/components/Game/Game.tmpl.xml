<fest:template xmlns:fest="http://fest.mail.ru">
    <div class="game__background">

    </div>
    <div class="game__header__home">
        <img src="/images/home_blue.svg" class="game__header__home-button js-game__header__home-button"/>
    </div>

    <div class="game__header__score">
        <span class="game__header__score-number"></span>
        <span class="game__header__score-text">раунд</span>
    </div>
    <section class="game-content">
        <div class="game-view__canvas-layers">
            <canvas class="game-view__canvas-layer canvas-fish"></canvas>
            <canvas class="game-view__canvas-layer canvas-penguin"></canvas>
            <canvas class="game-view__canvas-layer canvas-snow"></canvas>
            <canvas class="game-view__canvas-layer canvas-gun"></canvas>
        </div>
        <input type="button" class="game-view__turn-button"/>
        <img src="../../images/refresh.svg" class="game-view__turn-image"/>
    </section>    
</fest:template>